{
  "csrf": {
    "enabled": true,
    "time_limit": 3600,
    "exempt_views": []
  },
  "rate_limit": {
    "enabled": true,
    "requests_per_minute": 60,
    "burst_limit": 100
  },
  "password_policy": {
    "min_length": 8,
    "require_uppercase": true,
    "require_lowercase": true,
    "require_numbers": true,
    "require_special": true,
    "max_age_days": 90
  },
  "session_security": {
    "secure": true,
    "http_only": true,
    "same_site": "strict",
    "max_age": 3600
  },
  "input_validation": {
    "sql_injection_protection": true,
    "xss_protection": true,
    "file_upload_validation": true
  }
}