.clearance-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 排序栏 */
.sort-bar {
  background: white;
  padding: 20rpx 30rpx;
  display: flex;
  gap: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.sort-item {
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.sort-item.active {
  background: #4CAF50;
  color: white;
  font-weight: bold;
}

/* 商品列表 */
.clearance-list {
  padding: 20rpx;
}

.clearance-item {
  background: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
  transition: all 0.3s ease;
}

.clearance-item:active {
  transform: scale(0.98);
}

/* 紧急商品样式 */
.clearance-item.urgent {
  border: 3rpx solid #ff4757;
  box-shadow: 0 4rpx 20rpx rgba(255, 71, 87, 0.3);
}

.clearance-item.urgent::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #ff4757, #ff3742);
}

/* 紧急标识 */
.urgent-badge {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background: linear-gradient(135deg, #ff4757, #ff3742);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
  z-index: 10;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

.urgent-text {
  color: white;
}

/* VIP标识 */
.vip-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: linear-gradient(135deg, #ffd700, #ffb300);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
  z-index: 10;
}

.vip-text {
  color: white;
}

.item-content {
  display: flex;
  padding: 30rpx;
}

/* 商品图片 */
.item-image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.item-image image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

/* 商品信息 */
.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 清仓原因 */
.reason-tag {
  display: inline-block;
  background: #e8f5e8;
  color: #4CAF50;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  margin-bottom: 20rpx;
  align-self: flex-start;
}

/* 价格信息 */
.price-section {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}

.clearance-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4757;
}

.discount-tag {
  background: #ff4757;
  color: white;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: bold;
}

/* 库存信息 */
.stock-section {
  margin-bottom: 20rpx;
}

.stock-text {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.stock-bar {
  width: 100%;
  height: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.stock-progress {
  height: 100%;
  background: linear-gradient(90deg, #ff4757, #ff3742);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.stock-percent {
  font-size: 24rpx;
  color: #ff4757;
  font-weight: bold;
}

/* 倒计时 */
.countdown-section {
  margin-bottom: 15rpx;
}

.countdown-label {
  font-size: 24rpx;
  color: #666;
  margin-right: 10rpx;
}

.countdown-time {
  font-size: 26rpx;
  color: #ff4757;
  font-weight: bold;
  background: #fff5f5;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid #ffebee;
}

/* 关注人数 */
.viewers-section {
  margin-bottom: 15rpx;
}

.viewers-text {
  font-size: 24rpx;
  color: #999;
}

/* 加载状态 */
.loading-section {
  text-align: center;
  padding: 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 没有更多数据 */
.no-more {
  text-align: center;
  padding: 40rpx;
}

.no-more-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
}

/* 发布按钮 */
.publish-btn {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  padding: 20rpx 30rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  box-shadow: 0 4rpx 20rpx rgba(76, 175, 80, 0.4);
  z-index: 1000;
}

.publish-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.publish-text {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
} 