.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.market-list {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.market-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.market-item:last-child {
  border-bottom: none;
}

.market-item:active {
  background: #f8f9fa;
}

.market-info {
  flex: 1;
}

.market-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.market-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
}

.arrow {
  font-size: 32rpx;
  color: #999;
  margin-left: 20rpx;
}

.action-section {
  margin-bottom: 30rpx;
}

.action-btn {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 25rpx 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.btn-icon {
  margin-right: 10rpx;
  font-size: 36rpx;
}

.btn-text {
  font-size: 32rpx;
}

.tips {
  background: #e8f5e8;
  padding: 30rpx;
  border-radius: 12rpx;
}

.tip-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #4CAF50;
  display: block;
  margin-bottom: 15rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
  line-height: 1.4;
} 