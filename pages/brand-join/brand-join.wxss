/* 页面容器 */
.container {
  min-height: 100vh;
  background: #f8f9fa;
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #e9ecef;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left {
  display: flex;
  align-items: center;
}

.back-btn {
  background: none;
  border: none;
  padding: 10rpx;
  margin-right: 20rpx;
}

.back-icon {
  font-size: 36rpx;
  color: #333;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.header-right {
  display: flex;
  align-items: center;
}

.step-info {
  font-size: 28rpx;
  color: #666;
  background: #f0f0f0;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

/* 步骤指示器 */
.step-indicator {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.step-list {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
}

.step-item:not(:last-child)::after {
  content: '';
  position: absolute;
  top: 20rpx;
  right: -50%;
  width: 100%;
  height: 2rpx;
  background: #e9ecef;
  z-index: 1;
}

.step-item.completed:not(:last-child)::after {
  background: #28a745;
}

.step-number {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #e9ecef;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  position: relative;
  z-index: 2;
}

.step-item.active .step-number {
  background: #007bff;
  color: #fff;
}

.step-item.completed .step-number {
  background: #28a745;
  color: #fff;
}

.step-title {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.step-item.active .step-title {
  color: #007bff;
  font-weight: 600;
}

.step-item.completed .step-title {
  color: #28a745;
}

/* 步骤内容 */
.step-content {
  background: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.step-header {
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.step-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.step-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 套餐列表 */
.package-list {
  padding: 30rpx;
}

.package-item {
  position: relative;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.package-item.selected {
  border-color: #007bff;
  background: #f8f9ff;
}

.package-item.popular {
  border-color: #ffc107;
}

.popular-badge {
  position: absolute;
  top: -10rpx;
  right: 30rpx;
  background: #ffc107;
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.package-header {
  margin-bottom: 20rpx;
}

.package-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.package-price {
  display: flex;
  align-items: baseline;
  margin-bottom: 10rpx;
}

.price-symbol {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: 600;
}

.price-value {
  font-size: 48rpx;
  color: #ff6b35;
  font-weight: 700;
  margin: 0 8rpx;
}

.price-unit {
  font-size: 24rpx;
  color: #666;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.package-features {
  margin-bottom: 20rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.feature-icon {
  color: #28a745;
  font-size: 24rpx;
  margin-right: 12rpx;
  font-weight: bold;
}

.feature-text {
  font-size: 28rpx;
  color: #333;
}

.select-status {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

.status-icon {
  font-size: 32rpx;
  color: #007bff;
  font-weight: bold;
}

/* 特权政策 */
.privilege-section {
  margin: 30rpx;
  padding: 30rpx;
  background: #fff3cd;
  border-radius: 16rpx;
  border: 1rpx solid #ffeaa7;
}

.privilege-header {
  margin-bottom: 20rpx;
}

.privilege-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #856404;
}

.privilege-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.privilege-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.privilege-label {
  font-size: 28rpx;
  color: #856404;
  font-weight: 500;
}

.privilege-desc {
  font-size: 26rpx;
  color: #856404;
}

/* 表单区域 */
.form-section {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.form-tip {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  background: #fff;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #007bff;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  background: #fff;
  box-sizing: border-box;
  resize: none;
}

.form-textarea:focus {
  border-color: #007bff;
}

.char-count {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-top: 10rpx;
  display: block;
}

.error-text {
  font-size: 24rpx;
  color: #dc3545;
  margin-top: 8rpx;
  display: block;
}

/* Logo上传 */
.logo-upload {
  width: 120rpx;
  height: 120rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
}

.logo-preview {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.logo-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-icon {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

/* 图片上传 */
.image-upload {
  margin-top: 15rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.image-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #dc3545;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
}

/* 证书上传 */
.certificate-upload {
  width: 100%;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
}

.certificate-preview {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.certificate-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 分类网格 */
.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
  margin-top: 15rpx;
}

.category-item {
  height: 80rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  transition: all 0.3s ease;
}

.category-item.selected {
  border-color: #007bff;
  background: #007bff;
}

.category-name {
  font-size: 26rpx;
  color: #333;
}

.category-item.selected .category-name {
  color: #fff;
}

/* 认证网格 */
.certification-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
  margin-top: 15rpx;
}

.certification-item {
  height: 60rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  transition: all 0.3s ease;
}

.certification-item.selected {
  border-color: #007bff;
  background: #007bff;
}

.certification-name {
  font-size: 24rpx;
  color: #333;
}

.certification-item.selected .certification-name {
  color: #fff;
}

/* 确认区域 */
.confirm-section {
  padding: 30rpx;
}

.confirm-group {
  margin-bottom: 40rpx;
}

.group-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.package-summary {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.package-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.package-price {
  font-size: 30rpx;
  color: #ff6b35;
  font-weight: 600;
}

.info-list {
  background: #f8f9fa;
  border-radius: 8rpx;
  overflow: hidden;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
}

/* 提交说明 */
.submit-notice {
  background: #e7f3ff;
  border: 1rpx solid #b3d9ff;
  border-radius: 8rpx;
  padding: 20rpx;
}

.notice-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #0056b3;
  margin-bottom: 15rpx;
  display: block;
}

.notice-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.notice-item {
  font-size: 26rpx;
  color: #0056b3;
  line-height: 1.4;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #e9ecef;
  display: flex;
  gap: 20rpx;
  z-index: 100;
}

.prev-btn {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  background: #fff;
  color: #666;
  font-size: 30rpx;
  font-weight: 600;
}

.next-btn {
  flex: 1;
  height: 80rpx;
  border: none;
  border-radius: 8rpx;
  background: #007bff;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}

.submit-btn {
  flex: 1;
  height: 80rpx;
  border: none;
  border-radius: 8rpx;
  background: #28a745;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}

.submit-btn.submitting {
  background: #6c757d;
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  background: #fff;
  padding: 40rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-icon {
  font-size: 48rpx;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #333;
} 