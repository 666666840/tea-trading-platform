/* 数据分析页面样式 */
.analytics-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* 页面头部 */
.page-header {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.header-title {
  margin-bottom: 30rpx;
}

.title-text {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle-text {
  font-size: 24rpx;
  color: #666;
}

/* 时间范围选择器 */
.time-range-selector {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.range-buttons {
  display: flex;
  gap: 15rpx;
}

.range-btn {
  flex: 1;
  padding: 15rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  background: white;
  color: #666;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.range-btn.active {
  background: #667eea;
  color: white;
  border-color: #667eea;
}

.custom-date {
  display: flex;
  align-items: center;
  gap: 15rpx;
  flex-wrap: wrap;
}

.date-picker {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 10rpx 15rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  flex: 1;
  min-width: 200rpx;
}

.date-label {
  font-size: 22rpx;
  color: #666;
}

.date-value {
  font-size: 22rpx;
  color: #333;
  font-weight: 500;
}

.apply-btn {
  padding: 10rpx 20rpx;
  background: #4CAF50;
  color: white;
  border-radius: 8rpx;
  font-size: 22rpx;
  border: none;
}

/* 标签页导航 */
.tab-navigation {
  display: flex;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  overflow-x: auto;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx 20rpx;
  border-radius: 10rpx;
  min-width: 120rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.tab-item.active {
  background: #667eea;
  color: white;
}

.tab-icon {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 20rpx;
  font-weight: 500;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #666;
}

/* 标签页内容 */
.tab-content {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

/* 概览卡片 */
.overview-cards {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250rpx, 1fr));
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.overview-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 30rpx;
  border-radius: 15rpx;
  position: relative;
  overflow: hidden;
}

.overview-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  transform: rotate(45deg);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 20rpx;
  position: relative;
  z-index: 1;
}

.card-icon {
  font-size: 32rpx;
}

.card-title {
  font-size: 24rpx;
  opacity: 0.9;
}

.card-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  position: relative;
  z-index: 1;
}

.card-trend {
  font-size: 24rpx;
  opacity: 0.8;
  position: relative;
  z-index: 1;
}

/* 分析区块 */
.analysis-section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.refresh-btn {
  padding: 10rpx 20rpx;
  background: #4CAF50;
  color: white;
  border-radius: 8rpx;
  font-size: 22rpx;
  border: none;
}

/* 图表容器 */
.chart-container {
  margin-bottom: 30rpx;
}

.chart-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

/* 用户分段图表 */
.segment-chart {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.segment-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 15rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
}

.segment-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
  min-width: 200rpx;
}

.segment-color {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
}

.segment-name {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.segment-count {
  font-size: 22rpx;
  color: #666;
}

.segment-bar {
  flex: 1;
  height: 20rpx;
  background: #e0e0e0;
  border-radius: 10rpx;
  overflow: hidden;
}

.bar-fill {
  height: 100%;
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

.segment-percentage {
  font-size: 22rpx;
  color: #666;
  min-width: 60rpx;
  text-align: right;
}

/* 设备类型图表 */
.device-chart {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.device-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
}

.device-name {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.device-count {
  font-size: 22rpx;
  color: #666;
}

.device-percentage {
  font-size: 22rpx;
  color: #4CAF50;
  font-weight: 600;
}

/* 内容列表 */
.content-list, .keyword-list, .page-list {
  margin-bottom: 30rpx;
}

.list-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.content-item, .keyword-item, .page-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  transition: all 0.3s ease;
}

.content-item:active, .keyword-item:active, .page-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.content-info {
  flex: 1;
}

.content-title {
  display: block;
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 5rpx;
}

.content-type {
  font-size: 20rpx;
  color: #666;
}

.content-stats {
  display: flex;
  gap: 15rpx;
}

.stat-item {
  font-size: 20rpx;
  color: #666;
}

.keyword-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.keyword-count {
  font-size: 22rpx;
  color: #4CAF50;
  font-weight: 600;
}

.page-path {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.page-count {
  font-size: 22rpx;
  color: #666;
}

/* 内容类型图表 */
.content-type-chart {
  margin-bottom: 30rpx;
}

.type-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.type-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 15rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
}

.type-name {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  min-width: 120rpx;
}

.type-bar {
  flex: 1;
  height: 20rpx;
  background: #e0e0e0;
  border-radius: 10rpx;
  overflow: hidden;
}

.type-count {
  font-size: 22rpx;
  color: #666;
  min-width: 60rpx;
  text-align: center;
}

.type-percentage {
  font-size: 22rpx;
  color: #4CAF50;
  font-weight: 600;
  min-width: 60rpx;
  text-align: right;
}

/* 排行榜 */
.performance-ranking {
  margin-bottom: 30rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  transition: all 0.3s ease;
}

.ranking-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.ranking-number {
  width: 40rpx;
  height: 40rpx;
  background: #667eea;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
}

.ranking-content {
  flex: 1;
}

.ranking-stats {
  display: flex;
  gap: 15rpx;
}

/* 搜索意图分析 */
.intent-analysis {
  margin-bottom: 30rpx;
}

.intent-chart {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.intent-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 15rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
}

.intent-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
  min-width: 200rpx;
}

.intent-color {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
}

.intent-name {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.intent-count {
  font-size: 22rpx;
  color: #666;
}

.intent-bar {
  flex: 1;
  height: 20rpx;
  background: #e0e0e0;
  border-radius: 10rpx;
  overflow: hidden;
}

.intent-percentage {
  font-size: 22rpx;
  color: #666;
  min-width: 60rpx;
  text-align: right;
}

/* 关键词详情 */
.keyword-details {
  margin-bottom: 30rpx;
}

.keyword-detail {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.keyword-info {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.keyword-trend {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.trend-icon {
  font-size: 20rpx;
}

.trend-text {
  font-size: 20rpx;
  color: #4CAF50;
}

/* 事件列表 */
.events-list {
  margin-bottom: 30rpx;
}

.event-item {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  transition: all 0.3s ease;
}

.event-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.event-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.event-type {
  font-size: 24rpx;
  color: #333;
  font-weight: 600;
  padding: 5rpx 10rpx;
  background: #667eea;
  color: white;
  border-radius: 6rpx;
}

.event-time {
  font-size: 20rpx;
  color: #666;
}

.event-details {
  display: flex;
  gap: 20rpx;
  margin-bottom: 10rpx;
}

.event-page, .event-user {
  font-size: 22rpx;
  color: #666;
}

.event-meta {
  padding-top: 10rpx;
  border-top: 1rpx solid #e0e0e0;
}

.event-item-title {
  font-size: 22rpx;
  color: #333;
  font-weight: 500;
}

/* 分页 */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
  margin-top: 30rpx;
}

.page-btn {
  padding: 10rpx 20rpx;
  background: #667eea;
  color: white;
  border-radius: 8rpx;
  font-size: 22rpx;
  border: none;
}

.page-btn[disabled] {
  background: #ccc;
  color: #999;
}

.page-info {
  font-size: 22rpx;
  color: #666;
}

/* 报告和导出 */
.report-actions, .export-actions {
  margin-bottom: 30rpx;
}

.report-btn, .export-btn {
  margin: 10rpx;
  padding: 15rpx 25rpx;
  background: #4CAF50;
  color: white;
  border-radius: 10rpx;
  font-size: 24rpx;
  border: none;
  transition: all 0.3s ease;
}

.report-btn:active, .export-btn:active {
  transform: scale(0.95);
}

.export-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
}

.export-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

/* 报告显示 */
.report-display {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
}

.report-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.report-content {
  margin-bottom: 20rpx;
}

.report-type {
  display: block;
  font-size: 24rpx;
  color: #667eea;
  font-weight: 600;
  margin-bottom: 15rpx;
}

.report-summary {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.summary-item {
  font-size: 22rpx;
  color: #666;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .overview-cards {
    grid-template-columns: 1fr;
  }
  
  .custom-date {
    flex-direction: column;
  }
  
  .date-picker {
    min-width: auto;
  }
  
  .tab-navigation {
    flex-wrap: wrap;
  }
  
  .tab-item {
    min-width: 100rpx;
  }
} 