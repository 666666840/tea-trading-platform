.coming-soon {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: #ffffff;
}

.coming-soon-img {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 60rpx;
}

.coming-soon-text {
  font-size: 40rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 20rpx;
  text-align: center;
}

.coming-soon-desc {
  font-size: 28rpx;
  color: #999999;
  text-align: center;
}

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.header-left {
  flex: 1;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

.header-right {
  display: flex;
  align-items: center;
}

.join-btn {
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50rpx;
  padding: 16rpx 24rpx;
  display: flex;
  align-items: center;
  color: white;
  font-size: 28rpx;
}

.btn-icon {
  margin-right: 8rpx;
  font-size: 32rpx;
}

/* 筛选栏 */
.filter-bar {
  background: white;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.filter-btn {
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  font-size: 32rpx;
  color: #495057;
}

.btn-arrow {
  font-size: 24rpx;
  color: #6c757d;
}

/* 筛选面板 */
.filter-panel {
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.filter-group {
  margin-bottom: 40rpx;
}

.filter-group:last-child {
  margin-bottom: 0;
}

.group-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #212529;
  margin-bottom: 20rpx;
  display: block;
}

.option-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.option-item {
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 50rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  color: #495057;
  transition: all 0.3s ease;
}

.option-item.active {
  background: #667eea;
  border-color: #667eea;
  color: white;
}

/* 品牌列表 */
.brand-list {
  padding: 30rpx;
}

.brand-item {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: transform 0.3s ease;
}

.brand-item:active {
  transform: scale(0.98);
}

/* 品牌卡片头部 */
.brand-header {
  padding: 30rpx;
  display: flex;
  align-items: flex-start;
  border-bottom: 1rpx solid #f8f9fa;
}

.brand-logo {
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-image {
  width: 100%;
  height: 100%;
}

.brand-info {
  flex: 1;
}

.brand-name {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.name-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #212529;
  margin-right: 16rpx;
}

.certification-badges {
  display: flex;
  gap: 8rpx;
}

.badge {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  color: white;
}

.badge.national {
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
}

.badge.certified {
  background: linear-gradient(135deg, #4ecdc4, #44a08d);
}

.brand-slogan {
  font-size: 28rpx;
  color: #6c757d;
  margin-bottom: 16rpx;
  display: block;
}

.brand-meta {
  display: flex;
  gap: 20rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #868e96;
}

/* 品牌卡片内容 */
.brand-content {
  padding: 30rpx;
  border-bottom: 1rpx solid #f8f9fa;
}

.brand-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-label {
  font-size: 24rpx;
  color: #868e96;
  display: block;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #212529;
  display: block;
}

.brand-description {
  margin-bottom: 24rpx;
}

.desc-text {
  font-size: 28rpx;
  color: #495057;
  line-height: 1.6;
}

.certification-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.cert-tag {
  background: #e3f2fd;
  color: #1976d2;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.product-lines {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.line-label {
  font-size: 28rpx;
  color: #495057;
  margin-right: 16rpx;
}

.line-item {
  background: #f8f9fa;
  color: #495057;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

/* 品牌卡片底部 */
.brand-footer {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer-left {
  flex: 1;
}

.detail-btn {
  background: none;
  border: none;
  color: #667eea;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  padding: 0;
}

.btn-arrow {
  margin-left: 8rpx;
  font-size: 24rpx;
}

.footer-right {
  display: flex;
  gap: 16rpx;
}

.map-btn, .claim-btn {
  background: #667eea;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.claim-btn {
  background: #28a745;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 30rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  display: block;
}

.empty-title {
  font-size: 36rpx;
  color: #495057;
  margin-bottom: 16rpx;
  display: block;
}

.empty-desc {
  font-size: 28rpx;
  color: #868e96;
  display: block;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.3);
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #212529;
}

.modal-close {
  font-size: 48rpx;
  color: #868e96;
  line-height: 1;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

/* 详情弹窗 */
.detail-section {
  margin-bottom: 40rpx;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #212529;
  margin-bottom: 20rpx;
  display: block;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f8f9fa;
}

.info-label {
  font-size: 28rpx;
  color: #868e96;
}

.info-value {
  font-size: 28rpx;
  color: #212529;
  font-weight: 500;
}

.certification-list, .product-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.cert-item, .product-item {
  background: #f8f9fa;
  color: #495057;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.brand-story {
  font-size: 28rpx;
  color: #495057;
  line-height: 1.6;
}

/* 经销商地图弹窗 */
.dealer-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.dealer-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dealer-info {
  flex: 1;
}

.dealer-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #212529;
  margin-bottom: 8rpx;
  display: block;
}

.dealer-address {
  font-size: 28rpx;
  color: #495057;
  margin-bottom: 12rpx;
  display: block;
}

.dealer-meta {
  display: flex;
  gap: 16rpx;
}

.distance {
  font-size: 24rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.pickup-tag {
  font-size: 24rpx;
  color: #28a745;
  background: rgba(40, 167, 69, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.dealer-actions {
  display: flex;
  gap: 12rpx;
}

.contact-btn, .navigate-btn {
  background: #667eea;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.navigate-btn {
  background: #28a745;
}

/* 认领申请弹窗 */
.claim-form {
  max-width: 500rpx;
}

.form-section {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #212529;
  margin-bottom: 16rpx;
  display: block;
}

.form-input {
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #495057;
  margin-bottom: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #667eea;
  background: white;
}

.form-tips {
  background: #e3f2fd;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #1976d2;
  line-height: 1.5;
  display: block;
  margin-bottom: 8rpx;
}

.tip-text:last-child {
  margin-bottom: 0;
}

.form-actions {
  display: flex;
  gap: 20rpx;
}

.cancel-btn, .submit-btn {
  flex: 1;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 32rpx;
  border: none;
}

.cancel-btn {
  background: #f8f9fa;
  color: #495057;
}

.submit-btn {
  background: #667eea;
  color: white;
} 