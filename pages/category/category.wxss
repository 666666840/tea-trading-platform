/* 页面容器 */
.category-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding-bottom: 120rpx;
}

/* 页面头部 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 30rpx;
  color: white;
  text-align: center;
}

.header .title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.header .subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}



/* 分类标签 */
.category-tabs {
  display: flex;
  background: white;
  margin: 20rpx 30rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  overflow-x: auto;
  white-space: nowrap;
}

.tab-item {
  flex-shrink: 0;
  padding: 20rpx 30rpx;
  margin-right: 20rpx;
  background: #f8f9fa;
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-color: #667eea;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4);
}

.tab-item:last-child {
  margin-right: 0;
}

/* 价格列表 */
.price-list {
  margin: 20rpx 30rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
}

/* 价格项目 */
.price-item {
  background: white;
  margin-bottom: 20rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.price-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.15);
}

/* 价格头部 */
.price-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.tea-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.price-change {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

.price-change.up {
  color: #e74c3c;
  background: rgba(231, 76, 60, 0.1);
}

.price-change.down {
  color: #27ae60;
  background: rgba(39, 174, 96, 0.1);
}

.price-change.stable {
  color: #95a5a6;
  background: rgba(149, 165, 166, 0.1);
}

/* 价格信息 */
.price-info {
  margin-bottom: 20rpx;
}

.price-range, .price-avg {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.price-label {
  font-size: 28rpx;
  color: #666;
  min-width: 140rpx;
}

.price-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 价格详情 */
.price-details {
  margin-bottom: 20rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.detail-label {
  font-size: 26rpx;
  color: #999;
  min-width: 140rpx;
}

.detail-value {
  font-size: 26rpx;
  color: #666;
}

/* 价格标签 */
.price-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.tag.hot {
  background: rgba(231, 76, 60, 0.1);
  color: #e74c3c;
}

.tag.new {
  background: rgba(52, 152, 219, 0.1);
  color: #3498db;
}

.tag.recommended {
  background: rgba(46, 204, 113, 0.1);
  color: #2ecc71;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx;
  background: white;
  border-radius: 20rpx;
  margin: 20rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.load-more-text {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
}

/* 发布价格按钮 */
.publish-btn {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 25rpx 30rpx;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
  display: flex;
  align-items: center;
  z-index: 1000;
  transition: all 0.3s ease;
}

.publish-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
}

.publish-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.publish-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .category-tabs {
    padding: 15rpx;
  }
  
  .tab-item {
    padding: 15rpx 25rpx;
    font-size: 26rpx;
  }
  
  .price-item {
    padding: 25rpx;
  }
  
  .tea-name {
    font-size: 32rpx;
  }
  
  .publish-btn {
    bottom: 30rpx;
    right: 30rpx;
    padding: 20rpx 25rpx;
  }
} 