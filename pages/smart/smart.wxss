/* pages/smart/smart.wxss */

/* 智慧茶业页面样式 */
.smart-page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 页面头部 */
.page-header {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  padding: 40rpx 30rpx 30rpx;
  border-radius: 0 0 30rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.header-content {
  text-align: center;
  margin-bottom: 30rpx;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.header-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  font-weight: 300;
}



/* 智能功能模块 */
.modules-section {
  margin: 20rpx 30rpx;
}

.section-title {
  margin-bottom: 30rpx;
}

.title-text {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.title-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
}

.modules-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.module-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
}

.module-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.module-item:active::before {
  opacity: 1;
}

.module-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 25rpx;
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.2);
}

.module-content {
  flex: 1;
}

.module-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.module-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  line-height: 1.4;
}

.module-features {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.feature-tag {
  background: #f0f8ff;
  color: #667eea;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  border: 1rpx solid #e8f2ff;
}

.module-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.module-status.active {
  background: #e8f5e8;
  color: #4caf50;
}

/* 热门功能 */
.hot-features {
  margin: 20rpx 30rpx;
}

.features-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}

.feature-item:last-child {
  border-bottom: none;
}

.feature-item:active {
  background: #f8f9ff;
}

.feature-rank {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 25rpx;
}

.feature-info {
  flex: 1;
}

.feature-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.feature-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.feature-stats {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.stat-text {
  font-size: 24rpx;
  color: #999;
}

.rating-text {
  font-size: 24rpx;
  color: #ff9800;
  font-weight: bold;
}

.feature-arrow {
  color: #ccc;
  font-size: 32rpx;
  font-weight: bold;
}





/* 底部说明 */
.footer-note {
  text-align: center;
  padding: 40rpx 30rpx;
}

.note-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}