/* 商户入驻申请页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面头部 */
.header {
  text-align: center;
  padding: 40rpx 0;
  background: linear-gradient(135deg, #2e7d32, #4caf50);
  color: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 步骤指示器 */
.step-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  background: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #e0e0e0;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  transition: all 0.3s ease;
}

.step-item.active .step-number {
  background-color: #4caf50;
  color: white;
}

.step-label {
  font-size: 22rpx;
  color: #999;
  transition: all 0.3s ease;
}

.step-item.active .step-label {
  color: #4caf50;
  font-weight: bold;
}

.step-line {
  flex: 1;
  height: 2rpx;
  background-color: #e0e0e0;
  margin: 0 20rpx;
  transition: all 0.3s ease;
}

.step-line.active {
  background-color: #4caf50;
}

/* 表单容器 */
.form-container {
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  overflow: hidden;
}

.step-content {
  padding: 40rpx;
}

.form-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 表单项 */
.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
}

.required {
  color: #f44336;
  margin-right: 5rpx;
}

.form-input {
  width: 100%;
  padding: 25rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  background-color: #fafafa;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #4caf50;
  background-color: white;
}

.form-textarea {
  width: 100%;
  padding: 25rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  background-color: #fafafa;
  min-height: 120rpx;
  transition: all 0.3s ease;
}

.form-textarea:focus {
  border-color: #4caf50;
  background-color: white;
}

.text-count {
  text-align: right;
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 选择器 */
.form-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  background-color: #fafafa;
  transition: all 0.3s ease;
}

.form-picker:active {
  border-color: #4caf50;
  background-color: white;
}

.picker-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.picker-value.placeholder {
  color: #999;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
  transform: rotate(90deg);
}

/* 错误状态 */
.form-item.error .form-input,
.form-item.error .form-textarea,
.form-item.error .form-picker {
  border-color: #f44336;
}

.error-msg {
  font-size: 22rpx;
  color: #f44336;
  margin-top: 10rpx;
  padding-left: 10rpx;
}

/* 图片上传 */
.upload-section {
  margin-bottom: 50rpx;
}

.upload-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.upload-tip {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.upload-area {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.upload-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.upload-image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: #f44336;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #ccc;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fafafa;
  transition: all 0.3s ease;
}

.upload-btn:active {
  border-color: #4caf50;
  background-color: #f0f8f0;
}

.upload-icon {
  font-size: 40rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 22rpx;
  color: #999;
}

/* Logo上传特殊样式 */
.logo-upload .upload-item,
.logo-upload .upload-btn {
  width: 200rpx;
  height: 200rpx;
}

/* 执照上传特殊样式 */
.license-upload .upload-item,
.license-upload .upload-btn {
  width: 300rpx;
  height: 200rpx;
}

/* 确认信息 */
.confirm-section {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background-color: #f9f9f9;
  border-radius: 15rpx;
}

.confirm-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.confirm-item {
  display: flex;
  margin-bottom: 15rpx;
}

.confirm-label {
  width: 160rpx;
  font-size: 26rpx;
  color: #666;
  flex-shrink: 0;
}

.confirm-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.confirm-images {
  margin-top: 20rpx;
}

.image-group {
  margin-bottom: 30rpx;
}

.image-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.confirm-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 15rpx;
}

.confirm-image.small {
  width: 80rpx;
  height: 80rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.confirm-notice {
  padding: 30rpx;
  background-color: #e8f5e8;
  border-radius: 15rpx;
  border-left: 6rpx solid #4caf50;
}

.notice-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2e7d32;
  margin-bottom: 15rpx;
}

.notice-content {
  font-size: 24rpx;
  color: #2e7d32;
  line-height: 1.6;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 30rpx 20rpx;
  background: white;
  border-radius: 20rpx;
  margin-top: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.btn {
  flex: 1;
  padding: 30rpx;
  border-radius: 15rpx;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background-color: #4caf50;
  color: white;
}

.btn-primary:active {
  background-color: #388e3c;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #666;
}

.btn-secondary:active {
  background-color: #e0e0e0;
}

.btn-success {
  background-color: #2e7d32;
  color: white;
}

.btn-success:active {
  background-color: #1b5e20;
}

.btn-success:disabled {
  background-color: #c8e6c9;
  color: #666;
}

/* 草稿操作 */
.draft-actions {
  text-align: center;
  padding: 20rpx;
}

.btn-draft {
  background: none;
  border: none;
  color: #4caf50;
  font-size: 26rpx;
  padding: 20rpx 40rpx;
}

/* 选择器弹窗 */
.picker-popup {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  z-index: 1001;
}

.picker-popup.show {
  transform: translateY(0);
}

.picker-item {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333;
}

.picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.5);
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  z-index: 1000;
}

.picker-mask.show {
  opacity: 1;
  visibility: visible;
} 