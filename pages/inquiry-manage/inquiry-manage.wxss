/* 求购信息管理页面样式 */
.container {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  background: #fff;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.page-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.publish-btn {
  display: flex;
  align-items: center;
  background: #4CAF50;
  color: #fff;
  border: none;
  border-radius: 25rpx;
  padding: 15rpx 25rpx;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.publish-btn:active {
  background: #45a049;
  transform: scale(0.98);
}

.publish-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.publish-text {
  font-size: 26rpx;
}

/* 标签页切换 */
.tab-header {
  background: #fff;
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 25rpx 0;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #4CAF50;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #4CAF50;
  border-radius: 2rpx;
}

.tab-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 筛选条件 */
.filter-section {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.filter-row {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.filter-row:last-child {
  margin-bottom: 0;
}

.filter-label {
  font-size: 26rpx;
  color: #666;
  min-width: 80rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  flex: 1;
}

.filter-option {
  padding: 8rpx 16rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s ease;
}

.filter-option.active {
  background: #e8f5e8;
  color: #4CAF50;
}

.filter-option:active {
  transform: scale(0.95);
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 求购信息列表 */
.inquiry-list {
  background: #fff;
}

.list-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #999;
}

.inquiry-item {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.inquiry-item:last-child {
  border-bottom: none;
}

.inquiry-item:active {
  background: #f8f9fa;
}

.inquiry-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.inquiry-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  margin-right: 15rpx;
}

.inquiry-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.inquiry-status.active {
  background: #e8f5e8;
  color: #4CAF50;
}

.inquiry-status.expired {
  background: #f5f5f5;
  color: #999;
}

.inquiry-status.closed {
  background: #ffebee;
  color: #f44336;
}

/* 发布者信息 */
.publisher-info {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.publisher-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.publisher-name {
  font-size: 24rpx;
  color: #666;
}

/* 求购内容 */
.inquiry-content {
  margin-bottom: 15rpx;
}

.inquiry-category {
  font-size: 26rpx;
  color: #4CAF50;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.inquiry-quantity {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.inquiry-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 求购元信息 */
.inquiry-meta {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.meta-left {
  flex: 1;
}

.meta-time, .meta-expire {
  font-size: 22rpx;
  color: #999;
  display: block;
  margin-bottom: 5rpx;
}

.meta-right {
  display: flex;
  gap: 15rpx;
}

.meta-stat {
  font-size: 22rpx;
  color: #999;
}

/* 操作按钮 */
.inquiry-actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  flex: 1;
  padding: 15rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.edit-btn {
  background: #2196F3;
  color: #fff;
}

.close-btn {
  background: #ff9800;
  color: #fff;
}

.delete-btn {
  background: #f44336;
  color: #fff;
}

.contact-btn {
  background: #4CAF50;
  color: #fff;
}

.unfavorite-btn {
  background: #f8f9fa;
  color: #666;
  border: 1rpx solid #e0e0e0;
}

.action-btn:active {
  transform: scale(0.98);
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
  background: #fff;
}

.load-more text {
  font-size: 28rpx;
  color: #4CAF50;
} 