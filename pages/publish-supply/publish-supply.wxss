/* 发布供应页面样式 */
.publish-page {
  background-color: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 页面标题 */
.page-header {
  background: white;
  padding: 30rpx 20rpx;
  text-align: center;
  border-bottom: 1rpx solid #e9ecef;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.header-desc {
  font-size: 26rpx;
  color: #666;
}

/* 表单内容 */
.form-content {
  padding: 20rpx;
}

.form-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  border-left: 6rpx solid #4CAF50;
  padding-left: 20rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.label-text {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.required {
  color: #ff6b6b;
  margin-left: 5rpx;
}

.label-desc {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
  font-weight: normal;
}

/* 输入框 */
.form-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  background: white;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #4CAF50;
  box-shadow: 0 0 0 2rpx rgba(76, 175, 80, 0.1);
}

.form-input.error {
  border-color: #ff6b6b;
}

.form-input.placeholder {
  color: #999;
}

/* 选择器 */
.picker-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 0 20rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.3s ease;
}

.picker-input.error {
  border-color: #ff6b6b;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.picker-text.placeholder {
  color: #999;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 价格和数量输入 */
.price-input,
.quantity-input {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.price-value,
.quantity-value {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  background: white;
  box-sizing: border-box;
}

.price-value.error,
.quantity-value.error {
  border-color: #ff6b6b;
}

.price-unit,
.quantity-unit {
  min-width: 120rpx;
  height: 80rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 15rpx;
  background: white;
}

.unit-text {
  font-size: 26rpx;
  color: #333;
}

.unit-arrow {
  font-size: 20rpx;
  color: #999;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  min-height: 200rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  background: white;
  box-sizing: border-box;
  resize: none;
}

.char-count {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-top: 10rpx;
}

/* 茶叶类型标签 */
.tea-type-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.tea-type-tag {
  padding: 15rpx 25rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
  cursor: pointer;
  user-select: none;
  position: relative;
  overflow: hidden;
  min-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tea-type-tag:active {
  transform: scale(0.95);
  background: #e9ecef;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.tea-type-tag-hover {
  transform: scale(0.95);
  background: #e9ecef;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.tea-type-tag.selected {
  background: #2196F3;
  color: white;
  border-color: #2196F3;
  box-shadow: 0 2rpx 8rpx rgba(33,150,243,0.3);
}

.tea-type-tag.selected:active {
  background: #1976D2;
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(33,150,243,0.5);
}

.tea-type-tag.selected.tea-type-tag-hover {
  background: #1976D2;
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(33,150,243,0.5);
}

/* 其他选项样式 */
.tea-type-tag.other-option {
  background: #f0f8ff;
  border-color: #87ceeb;
  color: #4682b4;
}

.tea-type-tag.other-option.selected {
  background: #2196F3;
  border-color: #2196F3;
  color: white;
}

/* 自定义茶叶类型输入 */
.custom-tea-input {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.custom-input {
  flex: 1;
  height: 60rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  padding: 0 15rpx;
  font-size: 26rpx;
  color: #333;
  background: white;
}

.add-custom-btn {
  min-width: 100rpx;
  height: 60rpx;
  background: #2196F3;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.add-custom-btn:active {
  background: #1976D2;
  transform: scale(0.95);
}

.add-custom-btn[disabled] {
  background: #ccc;
  color: #999;
}

/* 特色标签 */
.feature-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.feature-tag {
  padding: 15rpx 25rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
  cursor: pointer;
  user-select: none;
  position: relative;
  overflow: hidden;
  min-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.feature-tag:active {
  transform: scale(0.95);
  background: #e9ecef;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.feature-tag-hover {
  transform: scale(0.95);
  background: #e9ecef;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.feature-tag.selected {
  background: #4CAF50;
  color: white;
  border-color: #4CAF50;
  box-shadow: 0 2rpx 8rpx rgba(76,175,80,0.3);
}

.feature-tag.selected:active {
  background: #45a049;
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(76,175,80,0.5);
}

.feature-tag.selected.feature-tag-hover {
  background: #45a049;
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(76,175,80,0.5);
}

/* 选择提示 */
.selection-tip {
  margin-bottom: 15rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #666;
  background: #f8f9fa;
  padding: 8rpx 15rpx;
  border-radius: 15rpx;
  border-left: 4rpx solid #4CAF50;
}

/* 选择状态 */
.selection-status {
  margin-top: 15rpx;
  padding: 10rpx 15rpx;
  background: #e3f2fd;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-text {
  font-size: 24rpx;
  color: #1976d2;
  flex: 1;
}

.clear-btn {
  font-size: 24rpx;
  color: #f44336;
  padding: 5rpx 10rpx;
  border-radius: 8rpx;
  background: rgba(244, 67, 54, 0.1);
}

/* 选择状态显示 */
.selection-display {
  margin-top: 15rpx;
  padding: 15rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
}

.selected-items {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.selected-item {
  display: flex;
  align-items: center;
  background: #2196F3;
  color: white;
  padding: 8rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  box-shadow: 0 2rpx 6rpx rgba(33, 150, 243, 0.3);
  transition: all 0.3s ease;
}

.selected-item:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 3rpx rgba(33, 150, 243, 0.5);
}

.item-text {
  margin-right: 8rpx;
}

.remove-btn {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.3s ease;
}

.remove-btn:active {
  background: rgba(255, 255, 255, 0.5);
  transform: scale(0.9);
}

/* 特色标签的选择状态显示 */
.feature-selection .selected-item {
  background: #4CAF50;
  box-shadow: 0 2rpx 6rpx rgba(76, 175, 80, 0.3);
}

.feature-selection .selected-item:active {
  box-shadow: 0 1rpx 3rpx rgba(76, 175, 80, 0.5);
}

/* 图片上传 */
.image-upload {
  margin-top: 15rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.upload-btn:active {
  background: #e9ecef;
  border-color: #4CAF50;
}

.upload-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
}

/* 错误信息 */
.error-message {
  font-size: 24rpx;
  color: #ff6b6b;
  margin-top: 8rpx;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx;
  border-top: 1rpx solid #e9ecef;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
}

.btn-primary.disabled {
  background: #ccc;
  color: #999;
}

.btn-secondary {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.btn-secondary:active {
  background: #e9ecef;
  transform: scale(0.98);
}