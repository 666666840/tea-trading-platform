/* 发布报价页面样式 */
.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  background: #fff;
  padding: 30rpx 20rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 26rpx;
  color: #999;
}

/* 快速更新区域 */
.quick-update-section {
  background: linear-gradient(135deg, #ff9800, #ff5722);
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 30rpx;
  text-align: center;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.3);
}

.quick-update-header {
  margin-bottom: 20rpx;
}

.quick-update-title {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.quick-update-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

.quick-update-btn {
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 25rpx;
  padding: 15rpx 40rpx;
  color: white;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s;
}

.quick-update-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.98);
}

/* 更新提醒区域 */
.update-reminders {
  margin: 20rpx;
}

.reminder-header {
  background: #fff3cd;
  padding: 20rpx;
  border-radius: 12rpx 12rpx 0 0;
  border-bottom: 1rpx solid #ffeaa7;
}

.reminder-title {
  font-size: 28rpx;
  color: #856404;
  font-weight: 500;
}

.reminder-list {
  background: #fff;
  border-radius: 0 0 12rpx 12rpx;
  overflow: hidden;
}

.reminder-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.reminder-item:last-child {
  border-bottom: none;
}

.reminder-content {
  flex: 1;
  margin-right: 20rpx;
}

.reminder-message {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  display: block;
  margin-bottom: 8rpx;
}

.reminder-days {
  font-size: 22rpx;
  color: #ff5722;
  font-weight: 500;
}

.reminder-action-btn {
  background: #ff5722;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 25rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s;
}

.reminder-action-btn:active {
  background: #e64a19;
  transform: scale(0.95);
}

/* 激励提示区域 */
.incentive-section {
  background: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.incentive-header {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  padding: 20rpx;
  text-align: center;
}

.incentive-title {
  font-size: 28rpx;
  color: white;
  font-weight: 500;
}

.incentive-list {
  padding: 20rpx;
}

.incentive-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s;
}

.incentive-item:last-child {
  border-bottom: none;
}

.incentive-item.completed {
  background: #f8fff8;
  border-radius: 8rpx;
  padding: 16rpx;
  margin: 8rpx 0;
}

.incentive-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  width: 40rpx;
  text-align: center;
}

.incentive-content {
  flex: 1;
}

.incentive-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 4rpx;
}

.incentive-desc {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.incentive-reward {
  font-size: 20rpx;
  color: #4CAF50;
  font-weight: 500;
}

.incentive-status {
  margin-left: 16rpx;
}

.status-icon {
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: bold;
}

.incentive-item.completed .status-icon {
  color: #4CAF50;
}

.incentive-item:not(.completed) .status-icon {
  color: #ccc;
}

/* 表单容器 */
.form-container {
  margin: 20rpx;
}

.form-section {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.required-mark {
  color: #f44336;
  font-size: 30rpx;
  margin-left: 5rpx;
}

.optional-mark {
  color: #999;
  font-size: 24rpx;
  margin-left: 10rpx;
}

/* 表单项 */
.form-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 15rpx;
}

.form-tip {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 15rpx;
  display: block;
}

/* 城市选择器 */
.city-selector {
  position: relative;
}

.current-city {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border: 1rpx solid #e0e0e0;
  margin-bottom: 16rpx;
}

.city-text {
  font-size: 28rpx;
  color: #333;
}

.city-arrow {
  font-size: 24rpx;
  color: #999;
}

.hot-cities {
  white-space: nowrap;
  display: flex;
  gap: 16rpx;
}

.city-item {
  padding: 12rpx 20rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.city-item.active {
  background: #4CAF50;
  color: white;
  border-color: #4CAF50;
}

/* 分类网格 */
.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 15rpx;
}

.category-item {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx 10rpx;
  text-align: center;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.category-item.active {
  background: #e8f5e8;
  color: #4CAF50;
  border-color: #4CAF50;
}

.category-item:active {
  transform: scale(0.95);
}

.category-name {
  font-size: 26rpx;
  font-weight: 500;
}

.subcategory-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12rpx;
}

.subcategory-item {
  background: #f8f9fa;
  border-radius: 6rpx;
  padding: 15rpx 8rpx;
  text-align: center;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.subcategory-item.active {
  background: #e8f5e8;
  color: #4CAF50;
  border-color: #4CAF50;
}

.subcategory-item:active {
  transform: scale(0.95);
}

.subcategory-name {
  font-size: 24rpx;
}

/* 价格输入组 */
.price-input-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.price-input {
  flex: 1;
  position: relative;
}

.input-field {
  width: 100%;
  padding: 20rpx;
  background: #f8f9fa;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.input-unit {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #999;
}

.price-separator {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

/* 单位选择器 */
.unit-picker {
  width: 100%;
}

.picker-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 图片上传 */
.image-upload {
  margin-top: 15rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #f44336;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.upload-btn:active {
  background: #e0e0e0;
}

.upload-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

/* 文本域 */
.textarea-field {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.char-count {
  text-align: right;
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 错误提示 */
.error-text {
  font-size: 22rpx;
  color: #f44336;
  margin-top: 10rpx;
  display: block;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.reset-btn {
  flex: 1;
  padding: 25rpx;
  background: #f8f9fa;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.reset-btn:active {
  background: #e0e0e0;
}

.submit-btn {
  flex: 2;
  padding: 25rpx;
  background: #4CAF50;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
  transition: all 0.3s;
}

.submit-btn.submitting {
  background: #ccc;
}

.submit-btn:active {
  transform: scale(0.98);
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background: #fff;
  padding: 40rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.loading-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #333;
} 