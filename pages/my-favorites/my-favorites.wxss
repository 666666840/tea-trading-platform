/* 收藏页面样式 */
.container {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 主容器 */
.favorite-container {
  opacity: 0;
  transform: translateY(20px);
  transition: all 0.3s ease;
}

.favorite-container.show {
  opacity: 1;
  transform: translateY(0);
}

/* 头部统计 */
.stats-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 0 0 20rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stats-number {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.stats-divider {
  width: 1rpx;
  height: 40rpx;
  background: #e0e0e0;
  margin: 0 20rpx;
}

/* 操作栏 */
.action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.action-left {
  display: flex;
  gap: 20rpx;
}

.action-right {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  background: #f8f8f8;
  transition: all 0.3s ease;
}

.action-btn.active {
  background: var(--primary-color);
  color: white;
}

.action-btn.delete-btn {
  background: #ff4757;
  color: white;
}

.action-icon {
  font-size: 24rpx;
}

.action-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 搜索栏 */
.search-bar {
  margin-bottom: 20rpx;
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.search-bar.show {
  max-height: 200rpx;
}

.search-input-wrapper {
  position: relative;
  margin: 0 30rpx;
}

.search-input {
  width: 100%;
  height: 80rpx;
  padding: 0 40rpx 0 20rpx;
  background: white;
  border-radius: 15rpx;
  border: 2rpx solid #e0e0e0;
  font-size: 28rpx;
  transition: border-color 0.3s ease;
}

.search-input:focus {
  border-color: var(--primary-color);
}

.search-clear {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #999;
  padding: 10rpx;
}

/* 标签栏 */
.tab-bar {
  margin-bottom: 20rpx;
}

.tab-scroll {
  white-space: nowrap;
}

.tab-list {
  display: flex;
  padding: 0 30rpx;
  gap: 20rpx;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 30rpx;
  background: white;
  border-radius: 15rpx;
  min-width: 120rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
}

.tab-item.active {
  background: var(--primary-color);
  color: white;
  transform: scale(1.05);
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 24rpx;
  font-weight: 500;
}

.tab-count {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  min-width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  background: #ff4757;
  color: white;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

/* 收藏列表 */
.favorite-list {
  flex: 1;
  padding: 0 30rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.3;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  text-align: center;
  line-height: 1.5;
}

/* 收藏项 */
.favorite-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.favorite-item {
  display: flex;
  align-items: center;
  background: white;
  padding: 30rpx;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
}

.favorite-item.selected {
  background: #f0f9ff;
  border: 2rpx solid var(--primary-color);
}

.favorite-item:active {
  transform: scale(0.98);
}

.item-checkbox {
  margin-right: 20rpx;
}

.checkbox-icon {
  font-size: 32rpx;
}

.item-content {
  flex: 1;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.item-title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
  line-height: 1.3;
  max-width: 400rpx;
}

.item-type {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 6rpx 12rpx;
  background: #f0f9ff;
  border-radius: 12rpx;
  margin-left: 20rpx;
}

.type-icon {
  font-size: 20rpx;
}

.type-text {
  font-size: 20rpx;
  color: var(--primary-color);
}

.item-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-time {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

.item-actions {
  display: flex;
  gap: 15rpx;
  margin-left: 20rpx;
}

.action-btn-small {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f8f8f8;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-btn-small:active {
  transform: scale(0.9);
}

.action-btn-small.delete {
  background: #ffe8e8;
}

.btn-icon {
  font-size: 24rpx;
}

/* 底部操作栏 */
.bottom-actions {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  background: white;
  border-top: 1rpx solid #e0e0e0;
  gap: 20rpx;
  position: sticky;
  bottom: 0;
  z-index: 10;
}

.bottom-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 15rpx;
  background: #f8f8f8;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.bottom-btn:active {
  transform: scale(0.95);
}

.btn-text {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
}

/* 响应式设计 */
@media (max-width: 400px) {
  .stats-header {
    padding: 20rpx;
  }
  
  .stats-number {
    font-size: 36rpx;
  }
  
  .favorite-item {
    padding: 20rpx;
  }
  
  .item-title {
    font-size: 28rpx;
  }
}

/* 动画效果 */
.favorite-item {
  animation: slideInUp 0.3s ease forwards;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .container {
    background: #1a1a1a;
  }
  
  .stats-header,
  .action-bar,
  .tab-item,
  .favorite-item,
  .empty-state {
    background: #2a2a2a;
  }
  
  .search-input {
    background: #2a2a2a;
    border-color: #444;
    color: white;
  }
  
  .item-type {
    background: rgba(76, 175, 80, 0.2);
  }
} 