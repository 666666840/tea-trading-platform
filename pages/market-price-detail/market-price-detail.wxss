/* 市场行情详情页面样式 */
.container {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  background: white;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.back-icon {
  font-size: 32rpx;
  color: #333;
}

.back-text {
  font-size: 28rpx;
  color: #333;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.header-right {
  display: flex;
  align-items: center;
}

.share-btn {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.share-btn::after {
  border: none;
}

.share-icon {
  font-size: 32rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 内容区域 */
.content {
  padding: 20rpx;
}

/* 价格概览 */
.price-overview {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.overview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.tea-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tea-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.tea-category {
  font-size: 24rpx;
  color: #666;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  align-self: flex-start;
}

.status-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.status-badge.updated {
  background: #e8f5e8;
  color: #4CAF50;
}

.status-badge.recent {
  background: #fff3cd;
  color: #856404;
}

.status-badge.outdated {
  background: #f8d7da;
  color: #721c24;
}

.status-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: currentColor;
}

.price-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.price-range {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.price-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #e74c3c;
}

.price-unit {
  font-size: 24rpx;
  color: #666;
}

.price-trend {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.trend-icon {
  font-size: 24rpx;
}

.trend-text {
  font-size: 24rpx;
  color: #666;
}

.overview-stats {
  display: flex;
  justify-content: space-around;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.stat-label {
  font-size: 22rpx;
  color: #666;
}

/* 标签页导航 */
.tab-nav {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  display: flex;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  padding: 24rpx 0;
  text-align: center;
  transition: all 0.3s;
  border-bottom: 3rpx solid transparent;
}

.tab-item.active {
  background: #f8f9fa;
  border-bottom-color: #4CAF50;
}

.tab-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.tab-item.active .tab-text {
  color: #4CAF50;
}

/* 标签页内容 */
.tab-content {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 详情标签页 */
.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.image-section {
  margin-bottom: 30rpx;
}

.image-list {
  white-space: nowrap;
  display: flex;
  gap: 16rpx;
}

.image-item {
  width: 200rpx;
  height: 150rpx;
  border-radius: 12rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.product-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.description-section {
  margin-bottom: 30rpx;
}

.description-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.info-section {
  margin-bottom: 30rpx;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  color: #666;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.tags-section {
  margin-bottom: 30rpx;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag-item {
  padding: 8rpx 16rpx;
  background: #e8f5e8;
  color: #4CAF50;
  border-radius: 16rpx;
  font-size: 24rpx;
}

/* 商户标签页 */
.sort-options {
  display: flex;
  gap: 16rpx;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.sort-item {
  padding: 12rpx 24rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.sort-item.active {
  background: #4CAF50;
  color: white;
  border-color: #4CAF50;
}

.merchant-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.merchant-item {
  border: 1rpx solid #f0f0f0;
  border-radius: 12rpx;
  overflow: hidden;
  transition: all 0.3s;
}

.merchant-item:hover {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.merchant-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  gap: 16rpx;
}

.merchant-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  object-fit: cover;
}

.merchant-info {
  flex: 1;
}

.merchant-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.merchant-rating {
  display: flex;
  gap: 16rpx;
}

.rating-text {
  font-size: 24rpx;
  color: #ff9800;
}

.distance-text {
  font-size: 24rpx;
  color: #666;
}

.merchant-price {
  text-align: right;
}

.price-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #e74c3c;
  display: block;
}

.price-unit {
  font-size: 22rpx;
  color: #666;
}

.merchant-details {
  padding: 0 20rpx 20rpx;
}

.detail-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 6rpx 12rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e9ecef;
}

.tag-icon {
  font-size: 20rpx;
}

.tag-text {
  font-size: 22rpx;
  color: #666;
}

.merchant-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.update-time {
  font-size: 22rpx;
  color: #999;
}

.contact-btn {
  padding: 12rpx 24rpx;
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 20rpx;
  font-size: 24rpx;
  transition: all 0.3s;
}

.contact-btn:active {
  background: #45a049;
}

/* 趋势标签页 */
.trend-section {
  margin-bottom: 30rpx;
}

.trend-chart {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.chart-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.chart-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.chart-desc {
  font-size: 24rpx;
  color: #666;
}

.trend-data {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.trend-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.trend-item:last-child {
  border-bottom: none;
}

.trend-date {
  font-size: 26rpx;
  color: #666;
}

.trend-price {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 底部提示 */
.bottom-tip {
  background: white;
  padding: 20rpx 30rpx;
  text-align: center;
  border-top: 1rpx solid #f0f0f0;
  margin-top: 20rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
} 