  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 154, 158, 0.3);
}

.subscribe-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.subscribe-info {
  flex: 1;
  margin-right: 20rpx;
}

.subscribe-title {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
  display: block;
  margin-bottom: 6rpx;
}

.subscribe-desc {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.subscribe-btn {
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 25rpx;
