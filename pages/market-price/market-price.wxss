/* 基本容器样式 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 全局按钮样式 - 排除筛选和排序按钮 */
button:not(.filter-btn):not(.sort-btn) {
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

button:not(.filter-btn):not(.sort-btn):active {
  background: #45a049;
}

/* 顶部导航栏 */
.top-nav {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
}

.nav-left {
  display: flex;
  flex-direction: column;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.nav-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

.nav-right {
  display: flex;
  gap: 20rpx;
}

.nav-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  min-width: 80rpx;
}

.btn-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.btn-text {
  font-size: 22rpx;
}

/* 搜索筛选区域 */
.search-filter {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.filter-row {
  margin-bottom: 30rpx;
}

.filter-row:last-child {
  margin-bottom: 0;
}

.filter-label {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.label-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.filter-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 地区选择 */
.current-location {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
}

.location-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.location-arrow {
  font-size: 24rpx;
  color: #666;
}

.hot-cities {
  white-space: nowrap;
  display: flex;
  gap: 20rpx;
}

.city-item {
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.city-item.active {
  background: #4CAF50;
  color: white;
  border-color: #4CAF50;
}

/* 分类选择 */
.category-tabs {
  white-space: nowrap;
  display: flex;
  gap: 20rpx;
}

.category-tab {
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.category-tab.active {
  background: #4CAF50;
  color: white;
  border-color: #4CAF50;
}

.subcategory-tabs {
  white-space: nowrap;
  display: flex;
  gap: 16rpx;
}

.subcategory-tab {
  padding: 12rpx 20rpx;
  background: #f0f0f0;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #666;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.subcategory-tab.active {
  background: #45a049;
  color: white;
  border-color: #45a049;
}

/* 排序下拉菜单 */
.sort-dropdown {
  position: relative;
}

.sort-trigger {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
  cursor: pointer;
}

.sort-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.sort-arrow {
  font-size: 24rpx;
  color: #666;
  transition: transform 0.3s;
}

.sort-arrow.up {
  transform: rotate(180deg);
}

.sort-options {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  z-index: 1000;
  opacity: 0;
  transform: translateY(-10rpx);
  transition: all 0.3s;
  pointer-events: none;
}

.sort-options.show {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
}

.sort-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s;
}

.sort-option:last-child {
  border-bottom: none;
}

.sort-option:hover {
  background: #f8f9fa;
}

.sort-option.active {
  background: #e8f5e8;
  color: #4CAF50;
}

.option-text {
  font-size: 28rpx;
}

.option-check {
  font-size: 24rpx;
  color: #4CAF50;
  font-weight: bold;
}

/* 行情内容 */
.market-content {
  padding: 0 30rpx;
}

/* 列表头部 */
.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #e9ecef;
  margin-bottom: 30rpx;
}

.header-left {
  display: flex;
  align-items: center;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.header-count {
  font-size: 26rpx;
  color: #666;
  margin-left: 12rpx;
}

.header-tip {
  font-size: 24rpx;
  color: #999;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 行情卡片 */
.market-cards {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.market-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.3s, box-shadow 0.3s;
}

.market-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.tea-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.city-name {
  font-size: 24rpx;
  color: #666;
  background: #f0f0f0;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.status-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.status-badge.updated {
  background: #e8f5e8;
  color: #4CAF50;
}

.status-badge.recent {
  background: #fff3cd;
  color: #856404;
}

.status-badge.outdated {
  background: #f8d7da;
  color: #721c24;
}

.status-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: currentColor;
}

/* 卡片内容 */
.card-body {
  margin-bottom: 24rpx;
}

.price-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.price-main {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.price-range {
  font-size: 40rpx;
  font-weight: bold;
  color: #e74c3c;
}

.price-unit {
  font-size: 24rpx;
  color: #666;
}

.price-trend {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.trend-icon {
  font-size: 24rpx;
}

.trend-text {
  font-size: 22rpx;
  color: #666;
}

.info-section {
  display: flex;
  gap: 40rpx;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-label {
  font-size: 22rpx;
  color: #999;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.description-section {
  margin-bottom: 20rpx;
}

.description-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 标签信息 */
.tags-section {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e9ecef;
}

.tag-icon {
  font-size: 20rpx;
}

.tag-text {
  font-size: 22rpx;
  color: #666;
}

/* 卡片底部 */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.footer-left, .footer-right {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  transition: all 0.3s;
  cursor: pointer;
}

.detail-btn {
  background: #4CAF50;
  color: white;
}

.detail-btn:hover {
  background: #45a049;
}

.quick-update-btn {
  background: #ffc107;
  color: #333;
}

.quick-update-btn:hover {
  background: #e0a800;
}

.btn-text {
  font-weight: 500;
}

.btn-arrow {
  font-size: 24rpx;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

.empty-actions {
  display: flex;
  gap: 20rpx;
}

.empty-btn {
  padding: 20rpx 40rpx;
  background: #4CAF50;
  color: white;
  border-radius: 12rpx;
  font-size: 28rpx;
  transition: background-color 0.3s;
}

.empty-btn:hover {
  background: #45a049;
}

/* 底部提示 */
.bottom-tip {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 30rpx;
  border-top: 1rpx solid #e9ecef;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.tip-icon {
  font-size: 40rpx;
}

.tip-content {
  flex: 1;
}

.tip-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.tip-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 即将上线页面样式 */
