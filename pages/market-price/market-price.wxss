}

.subcategory-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.subcategory-tag {
  padding: 8rpx 16rpx;
  background: #f0f8ff;
  color: #4facfe;
  border-radius: 20rpx;
  font-size: 22rpx;
  border: 1rpx solid #e6f3ff;
}

/* 热门城市预览 */
