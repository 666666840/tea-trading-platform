  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.countdown-title {
  margin-bottom: 30rpx;
}

.title-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.countdown-timer {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
}

.time-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 80rpx;
}

.time-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #4facfe;
  line-height: 1;
  margin-bottom: 8rpx;
}

.time-label {
  font-size: 22rpx;
  color: #999;
}

.time-separator {
  font-size: 36rpx;
  color: #ccc;
  font-weight: bold;
  margin-top: -20rpx;
}

/* 功能预览 */
.feature-preview {
  background: white;
  margin: 0 30rpx 30rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.preview-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.preview-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.preview-subtitle {
  font-size: 24rpx;
  color: #666;
}

.feature-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.feature-item {
