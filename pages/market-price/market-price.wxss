  background: #f8f9fa;
  border-radius: 15rpx;
  transition: all 0.3s;
}

.feature-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.feature-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 60rpx;
  text-align: center;
}

.feature-content {
  flex: 1;
}

.feature-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 6rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.feature-arrow {
  font-size: 24rpx;
  color: #ccc;
  margin-left: 15rpx;
}

/* 茶叶分类预览 */
.category-preview {
  background: white;
  margin: 0 30rpx 30rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

