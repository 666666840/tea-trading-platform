/* 采购询价页面样式 */
.container {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 发布求购按钮 */
.publish-header {
  background: #fff;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.publish-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #4CAF50;
  color: #fff;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.publish-btn:active {
  background: #45a049;
  transform: scale(0.98);
}

.publish-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.publish-text {
  font-size: 28rpx;
}

/* 求购信息发布表单 */
.inquiry-form {
  background: #fff;
  margin-bottom: 20rpx;
}

.form-section {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-section:last-child {
  border-bottom: none;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.required {
  color: #ff4757;
}

.optional {
  color: #999;
  font-size: 24rpx;
  font-weight: normal;
}

/* 分类选择 */
.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.category-item {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.category-item.active {
  background: #e8f5e8;
  color: #4CAF50;
  border: 2rpx solid #4CAF50;
}

.category-item:active {
  transform: scale(0.95);
}

.category-name {
  font-size: 26rpx;
  font-weight: 500;
}

.subcategory-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12rpx;
}

.subcategory-item {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 15rpx 10rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.subcategory-item.active {
  background: #e8f5e8;
  color: #4CAF50;
  border: 1rpx solid #4CAF50;
}

.subcategory-item:active {
  transform: scale(0.95);
}

.subcategory-name {
  font-size: 24rpx;
}

/* 数量输入 */
.quantity-row {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.quantity-input {
  flex: 1;
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.unit-picker {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx 30rpx;
  min-width: 120rpx;
}

.unit-text {
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

/* 描述输入 */
.description-input {
  width: 100%;
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  min-height: 200rpx;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 预算输入 */
.budget-row {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.budget-input {
  flex: 1;
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.budget-separator {
  font-size: 28rpx;
  color: #999;
}

.budget-unit {
  font-size: 28rpx;
  color: #666;
  min-width: 60rpx;
}

/* 地区选择 */
.location-row {
  display: flex;
  gap: 15rpx;
}

.location-picker {
  flex: 1;
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
}

.location-text {
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

/* 时间选择 */
.time-picker, .valid-picker {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
}

.time-text, .valid-text {
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

/* 附件上传 */
.attachment-area {
  margin-top: 15rpx;
}

.attachment-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.attachment-item {
  position: relative;
  width: 120rpx;
  height: 120rpx;
}

.attachment-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.attachment-delete {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 30rpx;
  height: 30rpx;
  background: #ff4757;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
}

.attachment-add {
  width: 120rpx;
  height: 120rpx;
  background: #f8f9fa;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.attachment-add:active {
  background: #e9ecef;
  border-color: #4CAF50;
}

.add-icon {
  font-size: 40rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 22rpx;
  color: #999;
}

.attachment-tip {
  font-size: 24rpx;
  color: #999;
}

/* 错误提示 */
.error-text {
  font-size: 24rpx;
  color: #ff4757;
  margin-top: 10rpx;
}

/* 表单操作按钮 */
.form-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx 20rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.reset-btn {
  background: #f8f9fa;
  color: #666;
  border: 1rpx solid #e0e0e0;
}

.reset-btn:active {
  background: #e9ecef;
}

.preview-btn {
  background: #4CAF50;
  color: #fff;
}

.preview-btn:active {
  background: #45a049;
}

/* 预览模式 */
.inquiry-preview {
  background: #fff;
  margin-bottom: 20rpx;
}

.preview-header {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  text-align: center;
}

.preview-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.preview-tip {
  font-size: 24rpx;
  color: #999;
}

.preview-content {
  padding: 30rpx 20rpx;
}

.preview-item {
  display: flex;
  margin-bottom: 20rpx;
}

.preview-label {
  font-size: 28rpx;
  color: #666;
  min-width: 160rpx;
  font-weight: 500;
}

.preview-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  line-height: 1.5;
}

.preview-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.back-btn {
  background: #f8f9fa;
  color: #666;
  border: 1rpx solid #e0e0e0;
}

.submit-btn {
  background: #4CAF50;
  color: #fff;
}

.submit-btn:active {
  background: #45a049;
}

/* 求购信息列表 */
.inquiry-list {
  background: #fff;
}

.list-header {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.inquiry-item {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.inquiry-item:last-child {
  border-bottom: none;
}

.inquiry-item:active {
  background: #f8f9fa;
}

.inquiry-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.inquiry-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  margin-right: 15rpx;
}

.inquiry-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.inquiry-status.active {
  background: #e8f5e8;
  color: #4CAF50;
}

.inquiry-status.hot {
  background: #fff3e0;
  color: #ff9800;
}

.inquiry-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.inquiry-req {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
  display: block;
}

.inquiry-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.user-name {
  font-size: 24rpx;
  color: #666;
}

.inquiry-meta {
  display: flex;
  gap: 15rpx;
}

.meta-item {
  font-size: 22rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
}

.load-more text {
  font-size: 28rpx;
  color: #4CAF50;
} 