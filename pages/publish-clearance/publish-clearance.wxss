.publish-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  padding: 40rpx 30rpx;
  color: white;
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 表单内容 */
.form-content {
  background: white;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.required {
  color: #ff4757;
  margin-left: 8rpx;
  font-size: 32rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  background: white;
  box-sizing: border-box;
}

.form-input.error {
  border-color: #ff4757;
}

.form-input:focus {
  border-color: #4CAF50;
}

.error-text {
  color: #ff4757;
  font-size: 26rpx;
  margin-top: 10rpx;
}

/* 价格区域 */
.price-section {
  display: flex;
  gap: 20rpx;
}

.price-section .form-item {
  flex: 1;
}

/* 库存区域 */
.stock-input-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.stock-input {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  background: white;
  box-sizing: border-box;
}

.stock-input.error {
  border-color: #ff4757;
}

.stock-separator {
  font-size: 32rpx;
  color: #666;
  font-weight: bold;
}

.stock-tip {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

/* 选择器 */
.form-picker {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  background: white;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.form-picker.error {
  border-color: #ff4757;
}

.picker-text {
  font-size: 30rpx;
  color: #333;
}

.picker-text:empty::before {
  content: '请选择清仓原因';
  color: #999;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  min-height: 160rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 30rpx;
  background: white;
  box-sizing: border-box;
  resize: none;
}

.form-textarea:focus {
  border-color: #4CAF50;
}

/* 图片上传 */
.image-section {
  margin-top: 20rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  border: 2rpx solid #e0e0e0;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ff4757;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ccc;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fafafa;
}

.upload-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 26rpx;
  color: #999;
}

.image-tip {
  margin-top: 20rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 发布须知 */
.notice-section {
  background: white;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.notice-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.notice-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.notice-item {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 提交按钮 */
.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  border: none;
  border-radius: 8rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn.disabled {
  background: #ccc;
  color: #999;
}

.submit-text {
  color: inherit;
} 