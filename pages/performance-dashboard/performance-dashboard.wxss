/* 基础样式 */
.dashboard { 
  padding: 24rpx; 
  background: #f5f5f5;
  min-height: 100vh;
}

/* 顶部操作栏 */
.action-bar {
  display: flex;
  justify-content: space-around;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: none;
  border: none;
  padding: 16rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.action-btn:active {
  background: #f0f0f0;
  transform: scale(0.95);
}

.action-btn .icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.action-btn text {
  font-size: 24rpx;
  color: #333;
}

/* 筛选器 */
.filters {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.filter-item {
  padding: 16rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
  color: #333;
}

.filter-item:last-child {
  border-bottom: none;
}

/* 核心指标卡片 */
.metrics { 
  display: flex; 
  flex-wrap: wrap; 
  gap: 24rpx; 
  margin-bottom: 32rpx;
}

.metric-card { 
  background: #fff; 
  border-radius: 16rpx; 
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1); 
  padding: 32rpx; 
  flex: 1 1 40%; 
  min-width: 280rpx; 
  margin-bottom: 16rpx;
  position: relative;
  transition: all 0.3s ease;
}

.metric-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.15);
}

.metric-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.metric-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.metric-status {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 32rpx;
}

.metric-status.normal {
  color: #4CAF50;
}

.metric-status.warning {
  color: #FF9800;
}

/* 自定义指标 */
.custom-metrics {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}

.custom-metrics-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-top: 24rpx;
}

.custom-metric-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
  color: #fff;
}

.custom-metric-label {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.custom-metric-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
}

/* 图表区域 */
.charts-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}

.chart-container {
  margin-bottom: 32rpx;
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  padding: 24rpx;
  background: #fafafa;
}

.chart-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  text-align: center;
}

.chart-wrapper {
  position: relative;
  width: 100%;
  height: 400rpx;
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
}

.chart-canvas {
  width: 100% !important;
  height: 100% !important;
}

/* 慢API列表 */
.slow-apis {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}

.api-list {
  margin-top: 24rpx;
}

.api-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  transition: background 0.3s ease;
}

.api-item:last-child {
  border-bottom: none;
}

.api-item:active {
  background: #f5f5f5;
}

.api-info {
  flex: 1;
}

.api-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.api-time {
  font-size: 24rpx;
  color: #666;
}

/* 热门页面 */
.top-pages {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}

.page-list {
  margin-top: 24rpx;
}

.page-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.page-item:last-child {
  border-bottom: none;
}

.page-info {
  flex: 1;
}

.page-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.page-visits {
  font-size: 24rpx;
  color: #666;
}

.page-load-time {
  font-size: 24rpx;
  color: #999;
}

/* 通用区域样式 */
.section { 
  margin-top: 32rpx; 
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}

.section-title { 
  font-weight: bold; 
  font-size: 32rpx; 
  margin-bottom: 24rpx; 
  display: block;
  color: #333;
}

/* 告警列表 */
.alert-list {
  margin-top: 24rpx;
}

.alert-item {
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  border-left: 6rpx solid;
  transition: all 0.3s ease;
}

.alert-item.error {
  background: #ffebee;
  border-left-color: #f44336;
}

.alert-item.warning {
  background: #fff3e0;
  border-left-color: #ff9800;
}

.alert-item.info {
  background: #e3f2fd;
  border-left-color: #2196f3;
}

.alert-item:active {
  transform: scale(0.98);
}

.alert-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.alert-level {
  font-size: 24rpx;
  font-weight: bold;
  text-transform: uppercase;
}

.alert-time {
  font-size: 22rpx;
  color: #666;
}

.alert-message {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.alert-type {
  font-size: 22rpx;
  color: #666;
}

/* 建议列表 */
.suggestion-list {
  margin-top: 24rpx;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  transition: background 0.3s ease;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-item:active {
  background: #f5f5f5;
}

.suggestion-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.suggestion-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 60rpx;
  color: #666;
  font-size: 28rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .metrics {
    flex-direction: column;
  }
  
  .metric-card {
    flex: 1 1 100%;
  }
  
  .custom-metrics-grid {
    grid-template-columns: 1fr;
  }
  
  .action-bar {
    flex-wrap: wrap;
  }
  
  .action-btn {
    flex: 1 1 50%;
  }
  
  .chart-wrapper {
    height: 300rpx;
  }
} 