# 数据库配置
DATABASE_URL=sqlite:///tea_platform.db

# Flask应用配置
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=True
FLASK_ENV=development

# 管理员账户配置
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-admin-password-change-this
DATA_ADMIN_USERNAME=dataadmin
DATA_ADMIN_PASSWORD=your-data-admin-password-change-this

# SMTP邮件配置
SMTP_HOST=smtp.qq.com
SMTP_PORT=587
SMTP_USERNAME=your-email@qq.com
SMTP_PASSWORD=your-email-password-change-this
NOTIFICATION_EMAIL=notifications@tea-platform.com

# 短信配置
SMS_API_KEY=your-sms-api-key-change-this
SMS_SECRET=your-sms-secret-change-this

# 微信小程序配置
WECHAT_APPID=your-wechat-appid-change-this
WECHAT_SECRET=your-wechat-secret-change-this

# 第三方服务配置
ALIYUN_ACCESS_KEY=your-aliyun-access-key-change-this
ALIYUN_SECRET_KEY=your-aliyun-secret-key-change-this

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_FOLDER=uploads

# 安全配置
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800

# 系统配置
SITE_NAME=茶叶交易平台
SITE_DESCRIPTION=专业的茶叶行业交易平台
CONTACT_EMAIL=contact@tea-platform.com
CONTACT_PHONE=400-123-4567
COMPANY_ADDRESS=北京市朝阳区茶叶大厦
ICP_NUMBER=京ICP备12345678号
