/* pages/index/index.wxss - 首页内容样式 */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* Tab导航样式 */
.content-tabs {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.tab-item text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.tab-item.active {
  background-color: #4CAF50;
  box-shadow: 0 2rpx 6rpx rgba(76, 175, 80, 0.3);
}

.tab-item.active text {
  color: #fff;
  font-weight: 600;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 内容列表 */
.content-list {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.content-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease;
  position: relative;
}

.content-item:last-child {
  border-bottom: none;
}

.content-item:active {
  background-color: #f8f8f8;
}

.content-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-bottom: 12rpx;
  padding-left: 40rpx;
}

.content-summary {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding-left: 40rpx;
}

.content-time {
  font-size: 24rpx;
  color: #999;
  padding-left: 40rpx;
}

/* 热点图标样式 */
.hot-icon {
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  font-size: 24rpx;
  color: #ff6b35;
  z-index: 1;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 刷新按钮 */
.refresh-btn {
  background-color: #4CAF50;
  color: #fff;
  text-align: center;
  padding: 24rpx 0;
  border-radius: 12rpx;
  margin: 30rpx 0 20rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
  transition: all 0.2s ease;
}

.refresh-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
}

.refresh-btn text {
  font-size: 30rpx;
  font-weight: 600;
}

/* 测试按钮 */
.test-btn {
  background-color: #2196F3;
  color: #fff;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.3);
  transition: all 0.2s ease;
}

.test-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(33, 150, 243, 0.3);
}

.test-btn text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .container {
    padding: 15rpx;
  }
  
  .tab-item text {
    font-size: 26rpx;
  }
  
  .content-title {
    font-size: 30rpx;
  }
  
  .content-summary {
    font-size: 26rpx;
  }
} 